<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0000000"
        android:textColor="@color/pedo_step_tv" />





    <LinearLayout
        android:id="@+id/mile_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/miles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="131321"
            android:textColor="@color/pedo_step_tv" />

        <TextView
            android:id="@+id/miles_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Miles"
            android:textColor="@color/pedo_step_tv" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/act_times_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toLeftOf="@id/mile_content"
        >

        <TextView
            android:id="@+id/act_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/pedo_step_tv" />

        <TextView
            android:id="@+id/act_times_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/d20dp"
            android:text="activities"
            android:layout_marginLeft="5dp"
            android:textColor="@color/pedo_step_tv" />
    </LinearLayout>
</RelativeLayout>