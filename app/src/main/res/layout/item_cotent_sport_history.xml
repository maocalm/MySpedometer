<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/d20dp"
    android:paddingRight="40dp"
    android:paddingTop="10dp">


    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="asdfaf"
        android:textColor="@color/pedo_step_tv" />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/miles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:text="asdfaf"
        android:textColor="@color/item1_step"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/unit_miles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/miles"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/miles"
        android:text="Miles"
        android:textColor="@color/pedo_step_tv" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/miles"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sport_time_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="asdfaf"
            android:textColor="@color/pedo_goal_tv"

            />

        >

        <TextView
            android:gravity="center"
            android:id="@+id/speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="asdfaf"
            android:textColor="@color/pedo_goal_tv"

            />

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asdfaf"
                android:textColor="@color/pedo_goal_tv"

                />

            <TextView
                android:id="@+id/step_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steps"
                android:textColor="@color/pedo_goal_tv"
                android:layout_marginLeft="5dp"
                />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>