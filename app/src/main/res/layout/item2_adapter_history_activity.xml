<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    >

    <RelativeLayout
        android:id="@+id/rel"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dec"
            android:textColor="@color/pedo_goal_tv"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/step_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_tv"
            android:layout_marginTop="15dp"
            android:text="dec"
            android:textColor="@color/pedo_step_tv"
            android:textSize="14sp" />



        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/date_tv"
            android:layout_marginLeft="32dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/calorle_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.6"
                android:textColor="@color/pedo_step_tv"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/calorle_unit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/calorle_tv"
                android:text="@string/kcal"
                android:textColor="@color/pedo_goal_tv"
                android:textSize="14sp" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
                <TextView
                    android:id="@+id/km_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="9.6"
                    android:textColor="@color/pedo_step_tv"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/km_unit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/km_tv"
                    android:text="@string/km"
                    android:layout_marginLeft="4dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/pedo_goal_tv"
                    android:textSize="14sp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                >

                <TextView
                    android:id="@+id/stepsecond_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/pedo_step_tv"
                    android:text="9.6"
                    />
                <TextView
                    android:id="@+id/stepsecond_unit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/time_minute"
                    android:layout_toRightOf="@id/stepsecond_tv"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/pedo_goal_tv"
                    android:textSize="14sp" />

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:layout_below="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"/>

</RelativeLayout>